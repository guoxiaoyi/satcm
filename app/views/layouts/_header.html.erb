<div class="top">
  <div class="container">
    <form> <input type="text" /> </form>
    <%= link_to "OA系统" %>
    <%= link_to "手机访问" %>
  </div>
</div>

<div class="container">
  <%= image_tag "logo.jpg", height: '80' %>
</div>

<div class="nav">
  <ul class="container">
    <li> <%= link_to '首页', root_path %> </li>
    <% @nav.each do |item| %>
      <li>
        <%= link_to item.name, category_path(item) %>
        <ol>
          <% item.children.each do |children_item| %>
            <li><%= link_to children_item.name, category_path(children_item)%></li>
          <% end %>
        </ol>
      </li>
    <% end %>
  </ul>
</div>
