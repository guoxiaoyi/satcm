<%#= render 'shared/admin/page_header', current_page: '导航列表', pages: @page_header %>
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><%= link_to '新增', new_admin_account_path, class: "btn btn-primary" %></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table class="table table-bordered" id="article_category_table">
        <% User.all.each do |user|%>
        <tr>
          <td> <%= user.email %></td>
          <td> <%= user.perm.split(',')%></td>
          <td>
            <% if user.perm != 'su' %>
              <%= link_to '修改', edit_admin_account_path(user) %> -
              <%= link_to '详情', admin_account_path(user) %> -
              <%= link_to '删除', admin_account_path(user), method: :delete, data: { confirm: '确认删除吗' } %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <!-- /.card-body -->
</div>


