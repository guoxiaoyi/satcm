<%= form_for([:admin, @image_link]) do |f| %>
  <%= render 'layouts/admin/errors', _models: @image_link %>

  <div class="form-group">
    <%= f.label :path %>
    <%= f.file_field :path, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :position %>
    <%= f.number_field :position, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "提交", class: "btn btn-primary" %>
  </div>
<% end %>
