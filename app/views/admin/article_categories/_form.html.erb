<%= form_for([:admin, @article_category]) do |f| %>
  <%= render 'layouts/admin/errors', _models: @article_category %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :custom_key %>(不清楚请不要修改)
    <%= f.text_field :custom_key, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :parent_id %>(空为最顶级,可显示在导航上)      
    <%= f.select :parent_id, nested_set_options(ArticleCategory, @article_categories) {|i| "#{'-' * i.level} #{i.name}" }, {include_blank: true}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= f.submit "提交", class: "btn btn-primary" %>
  </div>
<% end %>
