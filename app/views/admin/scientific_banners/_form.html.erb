<%= form_for([:admin, @scientific_banner]) do |f| %>
  <%= render 'layouts/admin/errors', _models: @scientific_banner %>

  <div class="form-group">
    <%= f.label :path %>
    <%= f.file_field :path, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :home_enabled %>
    <%= f.check_box :home_enabled, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :position %>
    <%= f.number_field :position, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "提交", class: "btn btn-primary" %>
  </div>
<% end %>
